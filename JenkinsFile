pipeline {
    agent any
    stages {
        stage('Checkout Code') {
            steps {
                echo 'git'
                git(url: 'https://github.com/erc83/jwt_mongo_node_express', branch: 'main')
            }
        }   
    
        stage('Install dependencies') {
            steps {
                script {
                    // Instalaci√≥n de las dependencias especificadas en package.json
                    bat 'npm install'
                }
            }
        }
        
        stage('Test Ejecution') {
            steps {
                script {
                    bat 'npm run test'
                }
            }
        }

        stage('Deploy'){
            steps {
                bat 'npm start'
            }
        }
    }
}